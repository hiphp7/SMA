<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp" >

        <RadioButton
            android:id="@+id/rb_potential_user"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/icon_user"
            android:text="潜在客户" />

        <RadioButton
            android:id="@+id/rb_back_record"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/icon_back_record"
            android:text="回拨记录" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/icon_my"
            android:text="我的" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_radio"
        android:layout_alignTop="@id/main_radio"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_user_sum"
                android:layout_width="38dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_float"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>